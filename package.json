{
  "name": "ethereumjs-lib",
  "version": "0.1.3",
  "description": "NodeJS and browser JS library for Ethereum",
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum/ethereumjs-lib.git"
  },
  "keywords": [
    "ethereum",
    "bitcoin",
    "crypto",
    "library"
  ],
  "devDependencies": {
    "mocha": "1.8.1",
    "chai": "~1.9.1",
    "istanbul": "0.1.30",
    "uglify-js": "*",
    "node-browserify": "https://github.com/substack/node-browserify/tarball/master"
  },
  "testling": {
    "browsers": [
      "ie/9..latest",
      "firefox/15..latest",
      "chrome/22..latest"
    ],
    "harness": "mocha-qunit",
    "files": "test/*.js"
  },
  "scripts": {
    "test": "istanbul test ./node_modules/.bin/_mocha -- --reporter list test/*",
    "compile": "browserify src/index.js -s Ethereum | uglifyjs > ethereum-min.js"
  },
  "author": {
    "name": "Ethereum",
    "url": "http://ethereum.org"
  }
}
